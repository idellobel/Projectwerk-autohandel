@model Autohandel.Domain.Entities.VoertuigCategorie

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <h6 style="margin-top:20px;">
        <a asp-action="Index"><i class="fas fa-arrow-circle-left"></i> Naar categorielijst</a>

    </h6>

    <h2 class="text-center text-xl-center text-uppercase text-success " style="margin-top:25px;">Wijzig</h2>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="VoertuigCatId" />
                <div class="form-group">
                    <label asp-for="VoertuigCategorieNaam" class="control-label"></label>
                    <input asp-for="VoertuigCategorieNaam" class="form-control" />
                    <span asp-validation-for="VoertuigCategorieNaam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Bewaar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>
