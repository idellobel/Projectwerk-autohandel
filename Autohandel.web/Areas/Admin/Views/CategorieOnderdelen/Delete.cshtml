@model Autohandel.Domain.Entities.CategorieOnderdelen

@{
    ViewData["Title"] = "Delete";
}

<h6 style="margin-top:20px;">
    <a asp-area="Admin" asp-controller="CategorieOnderdelen" asp-action="Index"><i class="fas fa-arrow-circle-left"></i> Naar categorieOnderdelenlijst</a>

</h6>

<h2 class="text-center text-xl-center text-uppercase text-success " style="margin-top:25px;">Ben je overtuigd om "<b>@Model.OnderdelenCategorienaam</b>" te verwijderen?</h2>
<div>
    <h4>CategorieOnderdelen</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OnderdelenCategorienaam)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OnderdelenCategorienaam)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Parent)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Parent.OnderdelenCategorienaam)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OnderdelenCategorieId" />
        <input type="submit" value="Verwijder" class="btn btn-danger" /> 
    </form>
</div>
