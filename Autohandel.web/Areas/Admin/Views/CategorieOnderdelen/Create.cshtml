@model Autohandel.web.ViewModels.CategorieOnderdelenViewModels.CategorieOnderdelenCreateViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <h6 style="margin-top:20px;">
        <a asp-area="Admin" asp-controller="CategorieOnderdelen" asp-action="Index"><i class="fas fa-arrow-circle-left"></i> Naar categorieOnderdelenlijst</a>

    </h6>


    <h2 class="text-center text-xl-center text-uppercase text-success " style="margin-top:25px;">Maak een nieuwe categorie voor de onderdelen</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CategorieOnderdeel" class="control-label"></label>
                    <input asp-for="CategorieOnderdeel.OnderdelenCategorienaam" class="form-control" />
                    <span asp-validation-for="CategorieOnderdeel" class="text-danger">@Html.ValidationMessage("NaamValidatieError")</span>
                </div>
                <div class="form-group">
                    <label asp-for="HoofdcategorieOnderdelenlijst" class="control-label"></label>
                    <select asp-for="CategorieOnderdeel.ParentId" class="form-control" asp-items="Model.HoofdcategorieOnderdelenlijst"></select>
                    <span asp-validation-for="CategorieOnderdeel.ParentId" class="text-danger"> @Html.ValidationMessage("CategorieOnderdeel.ParentId")</span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Maak" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>


