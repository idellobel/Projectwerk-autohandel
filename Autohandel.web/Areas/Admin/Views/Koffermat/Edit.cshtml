@model Autohandel.Domain.Entities.OnderdelenProducten
@using Autohandel.Domain.Entities
@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <h6 style="margin-top:20px;">
        <a asp-action="Index">
            <i class="fas fa-arrow-circle-left"></i> Terug naar 'beheer koffermat'
        </a>
    </h6>

    <h2 class="text-center text-xl-center text-uppercase text-success " style="margin-top:25px;">Wijzig</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Artikelnummer" />
                <div class="form-group">
                    <label asp-for="Artikelnaam" class="control-label"></label>
                    <input asp-for="Artikelnaam" class="form-control" />
                    <span asp-validation-for="Artikelnaam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Artikelomschrijving" class="control-label"></label>
                    <textarea asp-for="Artikelomschrijving" rows="5" cols="40" class="form-control"> </textarea>
                    <span asp-validation-for="Artikelomschrijving" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Prijs" class="control-label"></label>
                    <input asp-for="Prijs" class="form-control" />
                    <span asp-validation-for="Prijs" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Korting" class="control-label"></label>
                    <input asp-for="Korting" class="form-control" type="checkbox" value="true" />
                    <input asp-for="Korting" class="form-control" type="hidden" value="true" />
                    <span asp-validation-for="Korting" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FiguurURL" class="control-label"></label>
                    <input asp-for="FiguurURL" class="form-control" />
                    <span asp-validation-for="FiguurURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Specificatie.Kleur" class="control-label"></label>
                    <select asp-for="Specificatie.Kleur" asp-items="Html.GetEnumSelectList<Kleur>()" class="form-control">
                        <option selected="selected" value=""></option>
                    </select>
                    <span asp-validation-for="Specificatie.Kleur" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Specificatie.Gewicht" class="control-label"></label>
                    <input asp-for="Specificatie.Gewicht" class="form-control" />
                    <span asp-validation-for="Specificatie.Gewicht" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Specificatie.Mat" class="control-label"></label>
                    <input asp-for="Specificatie.Mat" class="form-control" />
                    <span asp-validation-for="Specificatie.Mat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Specificatie.Flappen" class="control-label"></label>
                    <input asp-for="Specificatie.Flappen" class="form-control" />
                    <span asp-validation-for="Specificatie.Flappen" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="OnderdelenCategorieId" class="control-label"></label>
                    <select asp-for="OnderdelenCategorieId" class="form-control" asp-items="ViewBag.OnderdelenCategorieId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="LeverancierID" class="control-label"></label>
                    <select asp-for="LeverancierID" class="form-control" asp-items="ViewBag.LeveranciersLijst">
                        <option>--Selecteer--</option>
                        <option value="1"> </option>
                    </select>
                    <span asp-validation-for="LeverancierID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Bewaar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>
<br />
<br />

