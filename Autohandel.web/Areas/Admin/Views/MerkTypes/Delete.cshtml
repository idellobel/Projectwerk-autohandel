@model Autohandel.Domain.Entities.MerkType

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <h6 style="margin-top:20px;">
        <a asp-action="Index"><i class="fas fa-arrow-circle-left"></i> Naar modellenlijst</a>

    </h6>

    <h2 class="text-center text-xl-center text-uppercase text-success " style="margin-top:25px;">Ben je overtuigd om "<b>@Model.MerkTypeNaam</b>" te verwijderen?</h2>

    <div>
        <h4>MerkType</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.MerkTypeNaam)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MerkTypeNaam)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.VoertuigMerk)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.VoertuigMerk.MerkNaam)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MerkTypeId" />
            <input type="submit" value="Verwijder" class="btn btn-danger" />
        </form>
    </div>
</div>