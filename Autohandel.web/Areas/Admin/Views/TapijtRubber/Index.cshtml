@model IEnumerable<Autohandel.Domain.Entities.OnderdelenProducten>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h6 style="margin-top:20px;">
        <a asp-area="Admin" asp-controller="Home" asp-action="SubCategorieOnderdelen" asp-route-id="4" style="margin-top:40px;">
            <i class="fas fa-arrow-circle-left"></i> Terug naar 'admin tapijten beheer'
        </a>
    </h6>

    <h2 class="text-center text-xl-center text-uppercase text-success " style="margin-top:25px;">Beheer tapijt in rubber</h2>

    <p>
        <a asp-action="Create">Maak nieuw tapijt aan</a>
    </p>
    <table class="table">
        <thead>
            <tr class="d-flex">
                <th class="col-1">
                    @Html.DisplayNameFor(model => model.Artikelnummer)<br />
                </th>
                <th class="col-2">
                    @Html.DisplayNameFor(model => model.Artikelnaam)<br />
                    @Html.DisplayNameFor(model => model.Prijs)<br />
                    @Html.DisplayNameFor(model => model.CategorieOnderdelen.OnderdelenCategorienaam)
                </th>

                <th class="col-4">
                    @Html.DisplayNameFor(model => model.Artikelomschrijving)<br />

                </th>
                <th class="col-4">
                    @Html.DisplayNameFor(model => model.FiguurURL)

                </th>

                <th class="col-1"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="d-flex">
                    <td class="col-1">
                        @Html.DisplayFor(modelItem => item.Artikelnummer)<br /><br />

                    </td>
                    <td class="col-2">
                        @Html.DisplayFor(modelItem => item.Artikelnaam)<br />
                        @Html.DisplayFor(modelItem => item.Prijs)<br />
                        @Html.DisplayFor(modelItem => item.CategorieOnderdelen.OnderdelenCategorienaam)
                    </td>

                    <td class="col-4">
                        @Html.Raw(item.Artikelomschrijving) <br />
                    </td>
                    <td class="col-4" style="font-size:12px;">
                        @Html.DisplayFor(modelItem => item.FiguurURL)<br />
                        <img src="@Url.Content(item.FiguurURL)" class="img-fluid" />
                    </td>


                    <td class="col-1">
                        <a asp-action="Edit" asp-route-id="@item.Artikelnummer">Wijzig</a> |
                        <a asp-action="Details" asp-route-id="@item.Artikelnummer">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Artikelnummer">Verwijder</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>