@model Autohandel.Domain.Entities.OnderdelenProducten

@{
    ViewData["Title"] = "Create";
}
<h6 style="margin-top:20px;">
    <a asp-action="Index">
        <i class="fas fa-arrow-circle-left"></i> Terug naar 'beheer luchtfilter'
    </a>
</h6>

<h2 class="text-center text-xl-center text-uppercase text-success " style="margin-top:25px;">Maak een nieuwe luchtfilter</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Artikelnummer" class="control-label"></label>
                <input asp-for="Artikelnummer" class="form-control" placeholder="---LF_Nr---" />
                <span asp-validation-for="Artikelnummer" class="text-danger"> @Html.ValidationMessage("ArtikelValidatieError")</span>
            </div>
            <div class="form-group">
                <label asp-for="Artikelnaam" class="control-label"></label>
                <input asp-for="Artikelnaam" class="form-control" />
                <span asp-validation-for="Artikelnaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artikelomschrijving" class="control-label"></label>
                <textarea asp-for="Artikelomschrijving" rows="5" cols="40" class="form-control"> </textarea>
                <span asp-validation-for="Artikelomschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prijs" class="control-label"></label>
                <input asp-for="Prijs" class="form-control" />
                <span asp-validation-for="Prijs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FiguurURL" class="control-label"></label>
                <input asp-for="FiguurURL" class="form-control" />
                <span asp-validation-for="FiguurURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specificatie.Type" class="control-label"></label>
                <input asp-for="Specificatie.Type" class="form-control" />
                <span asp-validation-for="Specificatie.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specificatie.Lengte" class="control-label"></label>
                <input asp-for="Specificatie.Lengte" class="form-control" />
                <span asp-validation-for="Specificatie.Lengte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specificatie.Hoogte" class="control-label"></label>
                <input asp-for="Specificatie.Hoogte" class="form-control" />
                <span asp-validation-for="Specificatie.Hoogte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specificatie.Breedte" class="control-label"></label>
                <input asp-for="Specificatie.Breedte" class="form-control" />
                <span asp-validation-for="Specificatie.Breedte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specificatie.Materie" class="control-label"></label>
                <input asp-for="Specificatie.Materie" class="form-control" />
                <span asp-validation-for="Specificatie.Materie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specificatie.Dikte" class="control-label"></label>
                <input asp-for="Specificatie.Dikte" class="form-control" />
                <span asp-validation-for="Specificatie.Dikte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specificatie.Buitendiameter" class="control-label"></label>
                <input asp-for="Specificatie.Buitendiameter" class="form-control" />
                <span asp-validation-for="Specificatie.Buitendiameter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specificatie.Binnendiameter" class="control-label"></label>
                <input asp-for="Specificatie.Binnendiameter" class="form-control" />
                <span asp-validation-for="Specificatie.Binnendiameter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specificatie.Gewicht" class="control-label"></label>
                <input asp-for="Specificatie.Gewicht" class="form-control" />
                <span asp-validation-for="Specificatie.Gewicht" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OnderdelenCategorieId" class="control-label"></label>
                <select asp-for="OnderdelenCategorieId" class="form-control" asp-items="ViewBag.OnderdelenCategorieId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Maak" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


