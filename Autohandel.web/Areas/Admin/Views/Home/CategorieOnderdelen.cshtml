@model IEnumerable<Autohandel.Domain.Entities.CategorieOnderdelen>
@{
    ViewData["Title"] = "CategorieOnderdelen";
}
<div class="container">
    <h6 style="margin-top:20px;">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" style="margin-top:40px;">
            <i class="fas fa-arrow-circle-left"></i> Terug naar 'Admin Dashboard-Onderdelen'
        </a>
    </h6>

    <h2 class="text-center text-xl-center text-lowercase text-primary " style="margin-top:25px;">Overzicht Onderdelen</h2>

    <div class="row text-center ">

        @foreach (var item in Model)
        {


            <div class="col-lg-3 col-md-5 col-sm-8 text-center DashItems ">
                <a asp-controller="Home" asp-action="SubCategorieOnderdelen" asp-area="Admin" asp-route-id="@item.OnderdelenCategorieId">
                    <img asp-append-version="true" src="~/images/onderdelen/@(item.OnderdelenCategorieId).jpg" alt="@(item.OnderdelenCategorienaam)" title="@(item.OnderdelenCategorienaam)"
                         class="img-fluid DashItemsAfbeeldingen">
                </a>

                <a asp-controller="Home" asp-action="SubCategorieOnderdelen" asp-area="Admin" asp-route-id="@item.OnderdelenCategorieId" class="btn btn-info" style="margin-bottom:2%;">@(item.OnderdelenCategorienaam)</a>
            </div>

        }
    </div>
</div>