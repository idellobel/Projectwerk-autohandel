@model Autohandel.Domain.Entities.Onderhoud

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <h6 style="margin-top:20px;">
        <a asp-action="Index">
            <i class="fas fa-arrow-circle-left"></i> Terug naar 'beheer onderhoud'
        </a>
    </h6>


    <h2 class="text-center text-xl-center text-uppercase text-success " style="margin-top:25px;">Ben je overtuigd om volgende onderhoud: "<b>@Model.OnderhoudId</b>" te verwijderen?</h2>

    <div>

        <div class="container">
            <div class="table-responsive ">
                <table class="table table-condensed table-bordered table-striped ">
                    <thead class="thead-dark">
                        <tr class="d-flex">
                            <th class="col-lg-4 col-md-4 col col-sm-4">Benaming</th>
                            <th class="col-lg-8 col-md-8 col-sm-8">Gegeven</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!---->
                        <tr class="d-flex">
                            <td style="font-weight:bold" class="col-lg-4 col-md-4 col-sm-4">
                                @Html.DisplayNameFor(model => model.OnderhoudId) : <br />
                            </td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Html.DisplayFor(model => model.OnderhoudId)<br />
                            </td>
                        </tr>
                        <tr class="d-flex">
                            <td style="font-weight:bold" class="col-lg-4 col-md-4 col-sm-4">
                                @Html.DisplayNameFor(model => model.Datum) : <br />
                            </td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Html.DisplayFor(model => model.Datum)<br />
                            </td>
                        </tr>
                        <tr class="d-flex">
                            <td style="font-weight:bold" class="col-lg-4 col-md-4 col-sm-4">
                                @Html.DisplayNameFor(model => model.Kilometerstand) : <br />
                                @Html.DisplayNameFor(model => model.Info) : <br />


                            </td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Html.DisplayFor(model => model.Kilometerstand)<br />
                                @Html.DisplayFor(model => model.Info)<br />
                            </td>
                        </tr>
                        <tr class="d-flex">
                            <td style="font-weight:bold" class="col-lg-4 col-md-4 col-sm-4">
                                @Html.DisplayNameFor(model => model.Voertuig) : <br /><br /><br />
                            </td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Html.DisplayFor(model => model.Voertuig.VoertuigArtikelNummer)<br />
                                @Html.DisplayFor(model => model.Voertuig.Merk.MerkNaam)<br />
                                @Html.DisplayFor(model => model.Voertuig.MerkType.MerkTypeNaam)<br />
                            </td>
                        </tr>
                        <tr class="d-flex">
                            <td style="font-weight:bold" class="col-lg-4 col-md-4 col-sm-4">
                                @Html.DisplayNameFor(model => model.Klant) : <br /><br /><br />
                            </td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Html.DisplayFor(model => model.KlantId)<br />
                                @Html.DisplayFor(model => model.Klant.KlantNaam)<br />

                            </td>
                        </tr>
                        <!---->
                    </tbody>
                </table>
            </div>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="OnderhoudId" />
            <input type="submit" value="Verwijder" class="btn btn-danger" />
        </form>
    </div>
</div>
<br />
<br />
