@using Microsoft.AspNetCore.Identity
@using Autohandel.web.ViewModels
@using Microsoft.AspNetCore.Http
@*Session Value = @Context.Session.GetString("mandje")*@

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav navbar-right">
            @*@await Component.InvokeAsync("MainNavigation")*@
            <li class="nav-item active">
                <a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Beheer uw account">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn nav-link">Uitloggen</button>
            </li>
            @await Component.InvokeAsync("WinkelkarOverzichtComponent")
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav navbar-right">
        @*@await Component.InvokeAsync("MainNavigation")*@
        <li class="nav-item  ">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Registreer</a>
        </li>
        <li class="nav-item ">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Inloggen</a>
        </li>
    </ul>
}
