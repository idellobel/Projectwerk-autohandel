@{
    ViewData["Title"] = "Reset authenticatie sleutel";
    ViewData.AddActivePage(ManageNavPages.TwoFactorAuthentication);
}
<div class="container">
    <div class="row" style="color:dimgray">
        <p class="tekstWelkomTitelPagina">@ViewData["Title"]</p>

    </div>
    
    <div class="alert alert-warning" role="alert">
        <p>
            <span class="glyphicon glyphicon-warning-sign"></span>
            <strong>Bij resetten van uw authenticatie sleutel zal de authenticatie app niet meer werken tot hij opnieuw geconfigureerd is.</strong>
        </p>
        <p>
            Dit desactiveert de 2FA tot dat je nazicht van jouw authenticatie app hebt gedaan en de 2FA recovery codes hebt gereset.
            Als de authenticatie app niet wordt hergeconfigureerd, verlies je toegang tot uw account.
        </p>
    </div>
    <div>
        <form asp-action="ResetAuthenticator" method="post" class="form-group">
            <button class="btn btn-danger" type="submit">Reset authenticatie sleutel</button>
        </form>
    </div>
</div>
