@model LoginWithRecoveryCodeViewModel
@{
    ViewData["Title"] = "Herstel code verificatie";
}
<div class="container">
    <div class="row" style="color:dimgray">
        <p class="tekstWelkomTitelPagina">@ViewData["Title"]</p>
        <hr />
        <p class="tekstWelkom">
            U hebt gevraagd om in te loggen met een herstelcode.<br /> Deze login wordt niet onthouden totdat je deze hebt opgegeven
            met een authenticatie-app-code bij het inloggen of de 2FA hebt uitgeschakeld en opnieuw bent ingelogd.
        </p>
    </div>
    <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RecoveryCode"></label>
                        <input asp-for="RecoveryCode" class="form-control" autocomplete="off" />
                        <span asp-validation-for="RecoveryCode" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success">Log in</button>
                </form>
            </div>
        </div>
</div>
<br />
<br />

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
